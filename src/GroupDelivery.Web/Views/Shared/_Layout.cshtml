@{
    var role = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - 外送湊單平台</title>
    
    <!-- Google Fonts: Inter & Noto Sans TC -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Noto+Sans+TC:wght@400;500;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap 5 (用於佈局輔助) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top mb-4">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                <img src="/img/jouin-logo.png"
                     alt="JOUIN"
                     style="height:32px;width:auto;" />

                <span class="fw-bold d-none d-sm-inline"
                      style="letter-spacing:.08em;">
                    JO<span style="color:#22c55e;">U</span>IN
                </span>
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav ms-auto align-items-lg-center">

                    <!-- 探索（所有人都能看） -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           href="#"
                           role="button"
                           data-bs-toggle="dropdown">
                            探索
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Home/Index">探索店家</a></li>
                            <li><a class="dropdown-item" href="/Home/NearbyStores">附近商家</a></li>
                            <li><a class="dropdown-item" href="/Home/StoreGroups">正在揪團</a></li>
                        </ul>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- 我的（所有登入者都有） -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               href="#"
                               role="button"
                               data-bs-toggle="dropdown">
                                我的
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Account/Orders">我的訂單</a></li>
                            </ul>
                        </li>

                        @* 只有店家才顯示 *@
                        @if (role == "Merchant")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   role="button"
                                   data-bs-toggle="dropdown">
                                    店家中心
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/Store/CreateGroup">開新團</a></li>
                                    <li><a class="dropdown-item" href="/Store/MyGroups">我的團單</a></li>
                                </ul>
                            </li>
                        }

                        <!-- 帳號 -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-bold"
                               href="#"
                               role="button"
                               data-bs-toggle="dropdown">
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Account/Profile">個人資料</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item text-danger" href="/Auth/Logout">登出</a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link fw-bold"
                               href="#"
                               data-bs-toggle="modal"
                               data-bs-target="#authModal">
                                登入 / 註冊
                            </a>
                        </li>
                    }

                </ul>

            </div>
        </div>
    </nav>
    <div class="modal fade" id="authModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content auth-card">

                <div class="modal-body p-4 p-md-5">

                    <!-- Logo / Title -->
                    <div class="text-center mb-4">
                        <img src="/img/jouin-logo.png" style="height:42px" class="mb-3" />
                        <h4 class="fw-bold mb-1">歡迎回來</h4>
                        <div class="text-muted small">
                            登入或註冊 JO U IN，只要一封信
                        </div>
                    </div>

                    <!-- Email login -->
                    <div class="mb-3">
                        <label class="form-label small text-muted">Email</label>
                        <input type="email"
                               class="form-control form-control-lg"
                               placeholder="you@example.com"
                               id="loginEmail">
                    </div>

                    <button class="btn btn-warning btn-lg w-100 mb-3"
                            onclick="sendLoginEmail()">
                        寄送登入驗證信
                    </button>

                    <div class="text-center text-muted small my-3">
                        或使用快速登入
                    </div>

                    <!-- LINE -->
                    <a href="/Auth/LineLogin"
                       class="btn btn-outline-success btn-lg w-100" style="color:#22c55e;">
                        使用 LINE 登入
                    </a>

                    <div class="text-center text-muted small mt-4">
                        我們不使用密碼，避免外洩風險
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr class="mt-5" />
        <footer class="text-center text-muted pb-4">
            <p>&copy; @DateTime.Now.Year - 外送湊單平台 (Alex Project)</p>
        </footer>
    </div>

    <!-- Vue 3 & Axios -->
    <script src="/js/layout.js"></script>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
