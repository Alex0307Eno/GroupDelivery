@{
    var role = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
}
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JoinIn 揪IN</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <link href="/css/site-custom.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top app-shell-header">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/Home/Index">揪IN JoinIn</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#appNav"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="appNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/Home/Index">揪團列表</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Orders">我的訂單</a></li>
                    @if (role == "Merchant")
                    {
                        <li class="nav-item"><a class="nav-link" href="/Store/Dashboard">商家中心</a></li>
                    }
                    @if (role == "Admin")
                    {
                        <li class="nav-item"><a class="nav-link" href="/Admin/Dashboard">管理後台</a></li>
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Profile">@User.Identity.Name</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Auth/Logout">登出</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#authModal">登入</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-3">
        @RenderBody()
    </main>

    <footer class="border-top py-4 text-center text-muted small">
        <div>© @DateTime.Now.Year JoinIn 揪IN</div>
        <div>聯絡我們 | 使用條款</div>
    </footer>

    <div class="modal fade" id="authModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <h5 class="mb-3">登入 / 註冊</h5>
                    <input type="email" id="loginEmail" class="form-control mb-2" placeholder="Email" />
                    <button type="button" class="btn btn-primary w-100" onclick="sendLoginEmail()">寄送登入驗證信</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/layout.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
