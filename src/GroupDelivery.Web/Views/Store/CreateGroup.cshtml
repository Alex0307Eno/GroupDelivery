@{ ViewData["Title"] = "開團"; }
<div id="app">
    <app-loading :show="loading || submitting"></app-loading>
    <app-toast :items="toasts" v-on:remove="removeToast"></app-toast>
    <div class="card"><div class="card-body">
        <h4>開團</h4>
        <div class="mb-2"><label class="form-label">店家</label><select class="form-select" v-model="form.storeId"><option value="">請選擇</option><option v-for="store in stores" :value="store.storeId">{{ store.storeName }}</option></select><app-form-error :errors="errors" field="storeId"></app-form-error></div>
        <div class="mb-2"><label class="form-label">目標金額</label><input class="form-control" v-model="form.targetAmount" v-on:input="form.targetAmount = toNumberInput(form.targetAmount)" v-on:blur="moneyBlur('targetAmount')" /><app-form-error :errors="errors" field="targetAmount"></app-form-error></div>
        <div class="mb-2"><label class="form-label">截止時間</label><input type="datetime-local" class="form-control" v-model="form.deadline" /><app-form-error :errors="errors" field="deadline"></app-form-error></div>
        <div class="mb-2"><label class="form-label">外送範圍(km)</label><input class="form-control" v-model="form.deliveryRangeKm" /></div>
        <div class="mb-2"><label class="form-label">備註</label><textarea class="form-control" v-model="form.remark"></textarea></div>
        <button class="btn btn-primary" :disabled="submitting" v-on:click="submit">建立揪團</button>
    </div></div>
</div>
@section Scripts {
<script src="/js/api/apiClient.js"></script>
<script src="/js/components/app-components.js"></script>
<script src="/js/pages/merchant-group-create.js"></script>
}
