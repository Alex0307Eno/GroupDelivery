@{ ViewData["Title"] = "方案與付款"; }
<div id="app">
    <app-loading :show="loading || submitting"></app-loading>
    <app-toast :items="toasts" v-on:remove="removeToast"></app-toast>
    <div class="alert alert-info" v-if="current">目前方案：{{ current.planCode }}，到期日：{{ current.expireAt }}</div>
    <div class="row g-3">
        <div class="col-md-3" v-for="plan in plans" :key="plan.code"><div class="card h-100"><div class="card-body">
            <div class="badge bg-warning mb-2" v-if="plan.recommend">推薦</div>
            <h4>{{ plan.code }}</h4><div>{{ plan.summary }}</div><div class="text-muted">{{ plan.weight }}</div>
            <button class="btn btn-primary w-100 mt-3" :disabled="submitting" v-on:click="upgrade(plan)">立即升級</button>
        </div></div></div>
    </div>
</div>
@section Scripts {
<script src="/js/api/apiClient.js"></script>
<script src="/js/components/app-components.js"></script>
<script src="/js/pages/merchant-subscription.js"></script>
}
