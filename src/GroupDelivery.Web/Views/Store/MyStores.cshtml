@{ ViewData["Title"] = "我的店家"; }
<div id="app">
    <app-loading :show="loading"></app-loading>
    <app-toast :items="toasts" v-on:remove="removeToast"></app-toast>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">我的店家列表</h4>
        <a href="/Store/Create" class="btn btn-primary">新增店家</a>
    </div>
    <div v-if="!stores.length"><app-empty-state text="尚未建立店家"></app-empty-state></div>
    <table class="table" v-if="stores.length">
        <thead><tr><th>店名</th><th>狀態</th><th>地址</th><th>電話</th><th>操作</th></tr></thead>
        <tbody><tr v-for="store in stores" :key="store.storeId">
            <td>{{ store.storeName }}</td><td>{{ store.isActive ? '啟用' : '停用' }}</td><td>{{ store.address }}</td><td>{{ store.phone }}</td>
            <td>
                <a class="btn btn-sm btn-outline-secondary me-1" :href="`/Store/Edit/${store.storeId}`">編輯</a>
                <a class="btn btn-sm btn-outline-primary me-1" :href="`/StoreMenu/Manage?storeId=${store.storeId}`">菜單</a>
                <button class="btn btn-sm btn-outline-danger" v-on:click="toggle(store)">{{ store.isActive ? '停用' : '啟用' }}</button>
            </td>
        </tr></tbody>
    </table>
</div>
@section Scripts {
<script src="/js/api/apiClient.js"></script>
<script src="/js/components/app-components.js"></script>
<script src="/js/pages/merchant-stores.js"></script>
}
