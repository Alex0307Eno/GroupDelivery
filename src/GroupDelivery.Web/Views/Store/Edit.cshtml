@model GroupDelivery.Domain.StoreUpdateRequest

<h3 class="fw-bold mb-4">編輯商店</h3>

<form asp-action="Edit" asp-controller="Store" asp-route-id="@Model.StoreId" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="StoreId" />

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">商店名稱</label>
                <input class="form-control" asp-for="StoreName" />
            </div>

            <div class="mb-3">
                <label class="form-label">電話</label>
                <input class="form-control" asp-for="Phone" />
            </div>

            <div class="mb-3">
                <label class="form-label">地址</label>
                <input class="form-control" asp-for="Address" />
            </div>

            <div class="mb-3">
                <label class="form-label">商店介紹</label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
            </div>

            <h6 class="fw-bold mt-4">圖片</h6>

            <div class="mb-3">
                <label class="form-label">更新封面照片</label>
                <input type="file" class="form-control" asp-for="NewCoverImage" accept="image/*" />
            </div>

            <div class="mb-3">
                <label class="form-label">新增菜單照片</label>
                <input type="file" class="form-control" asp-for="NewMenuImages" multiple accept="image/*" />
            </div>
        </div>
    </div>

    <div class="mt-4">
        <button class="btn btn-success">儲存變更</button>
        <a href="/Store/MyStores" class="btn btn-outline-secondary">返回</a>
    </div>
</form>
