@model GroupDelivery.Domain.StoreInitRequest

<h3 class="fw-bold mb-4">新增商店</h3>

<form asp-action="Create" asp-controller="Store" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h5 class="fw-bold mb-3">基本資料</h5>

            <div class="mb-3">
                <label class="form-label">商店名稱</label>
                <input class="form-control" asp-for="StoreName" />
            </div>

            <div class="mb-3">
                <label class="form-label">電話</label>
                <input class="form-control" asp-for="Phone" />
            </div>

            <div class="mb-3">
                <label class="form-label">地址</label>
                <input class="form-control" asp-for="Address" />
            </div>

            <div class="mb-3">
                <label class="form-label">商店介紹</label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
            </div>

            <h6 class="fw-bold mt-4">商店圖片</h6>

            <div class="mb-3">
                <label class="form-label">店家封面照片</label>
                <input type="file" class="form-control" asp-for="CoverImage" accept="image/*" />
            </div>

            <div class="mb-3">
                <label class="form-label">菜單照片（可多張）</label>
                <input type="file" class="form-control" asp-for="MenuImages" accept="image/*" multiple />
            </div>
        </div>
    </div>

    <button class="btn btn-success">建立商店</button>
    <a href="/Store/MyStores" class="btn btn-outline-secondary">取消</a>
</form>
