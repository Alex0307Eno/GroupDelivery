@model GroupDelivery.Domain.StoreInitRequest

@{
    ViewData["Title"] = "建立商店";
}

<style>
    :root {
        --bg: #f4f6fb;
        --card: #ffffff;
        --primary: #ff6a00;
        --muted: #6b7280;
        --border: #e5e7eb;
    }

    body {
        background: var(--bg);
    }

    .dashboard-wrap {
        max-width: 900px;
        margin: 0 auto;
        padding: 3rem 1rem;
    }

    .hero-card {
        background: var(--card);
        border-radius: 24px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 25px 50px rgba(0,0,0,.05);
    }

        .hero-card h1 {
            font-weight: 900;
            font-size: 2.3rem;
            margin-bottom: .5rem;
        }

        .hero-card p {
            color: var(--muted);
        }

    .module-card {
        background: var(--card);
        border-radius: 24px;
        padding: 2.2rem;
        margin-bottom: 2rem;
        box-shadow: 0 20px 40px rgba(0,0,0,.05);
    }

    .module-title {
        font-weight: 800;
        font-size: .85rem;
        text-transform: uppercase;
        letter-spacing: .12em;
        color: var(--muted);
        margin-bottom: 1.5rem;
    }

    .input-modern {
        width: 100%;
        border: none;
        border-bottom: 2px solid var(--border);
        padding: .9rem 0;
        font-size: 1rem;
        margin-bottom: 1.5rem;
        background: transparent;
    }

        .input-modern:focus {
            outline: none;
            border-color: var(--primary);
        }

    textarea.description-box {
        width: 100%;
        border-radius: 16px;
        border: 1px solid var(--border);
        padding: 1rem;
        font-size: .95rem;
        resize: none;
        margin-bottom: 1rem;
    }

    .time-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .form-select {
        border-radius: 12px;
        padding: .8rem;
        border: 1px solid var(--border);
    }

    .day-wrap {
        display: flex;
        flex-wrap: wrap;
        gap: .6rem;
    }

        .day-wrap input {
            display: none;
        }

        .day-wrap label {
            padding: .6rem 1.2rem;
            border-radius: 999px;
            border: 1px solid var(--border);
            cursor: pointer;
            transition: .2s;
        }

        .day-wrap input:checked + label {
            background: var(--primary);
            color: #fff;
            border-color: var(--primary);
        }

    .cover-preview {
        width: 100%;
        max-height: 220px;
        object-fit: cover;
        border-radius: 18px;
        margin-bottom: 1rem;
        display: none;
    }

    .submit-btn {
        width: 100%;
        padding: 1.2rem;
        border-radius: 999px;
        border: none;
        background: var(--primary);
        color: #fff;
        font-weight: 800;
        font-size: 1rem;
        transition: .2s;
    }

        .submit-btn:hover {
            background: #e65c00;
        }
</style>

<div class="dashboard-wrap">

    <div class="hero-card">
        <h1>建立你的商店</h1>
        <p>完成設定後即可開始開團營業</p>
    </div>

    <form asp-action="Create"
          asp-controller="Store"
          method="post"
          enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <!-- 基本資訊 -->
        <div class="module-card">
            <div class="module-title">基本資訊</div>

            <input class="input-modern" asp-for="StoreName" placeholder="商店名稱" />
            <input class="input-modern" asp-for="Address" placeholder="店面地址" />
            <input class="input-modern" asp-for="Landline" placeholder="市話" />
            <input class="input-modern" asp-for="Mobile" placeholder="手機" />

            <textarea asp-for="Description"
                      rows="3"
                      maxlength="200"
                      class="description-box"
                      placeholder="簡單介紹你的商店特色"></textarea>
        </div>

        <!-- 營業時間 -->
        <div class="module-card">
            <div class="module-title">營業時間</div>

            <div class="fw-bold mb-2">第一段</div>
            <div class="time-grid">
                <select class="form-select" asp-for="OpenTime">
                    @for (int h = 0; h < 24; h++)
                    {
                        var t = new TimeSpan(h, 0, 0);
                        <option value="@t">@t.ToString(@"hh\:mm")</option>
                    }
                </select>

                <select class="form-select" asp-for="CloseTime">
                    @for (int h = 0; h < 24; h++)
                    {
                        var t = new TimeSpan(h, 0, 0);
                        <option value="@t">@t.ToString(@"hh\:mm")</option>
                    }
                </select>
            </div>

            <div class="fw-bold mb-2">第二段（可選）</div>
            <div class="time-grid">
                <select class="form-select" asp-for="OpenTime2">
                    <option value="">不設定</option>
                    @for (int h = 0; h < 24; h++)
                    {
                        var t = new TimeSpan(h, 0, 0);
                        <option value="@t">@t.ToString(@"hh\:mm")</option>
                    }
                </select>

                <select class="form-select" asp-for="CloseTime2">
                    <option value="">不設定</option>
                    @for (int h = 0; h < 24; h++)
                    {
                        var t = new TimeSpan(h, 0, 0);
                        <option value="@t">@t.ToString(@"hh\:mm")</option>
                    }
                </select>
            </div>
        </div>

        <!-- 公休日 -->
        <div class="module-card">
            <div class="module-title">公休日</div>

            <div class="day-wrap">
                @{
                    var days = new[] { "星期日", "星期一", "星期二", "星期三", "星期四", "星期五", "星期六" };
                    for (int i = 0; i < 7; i++)
                    {
                        <input type="checkbox" name="ClosedDays" value="@i" id="d_@i" />
                        <label for="d_@i">@days[i]</label>
                    }
                }
            </div>
        </div>

        <!-- 封面 -->
        <div class="module-card">
            <div class="module-title">封面照片</div>

            <img id="previewImage" class="cover-preview" />

            <input type="file"
                   class="form-control"
                   asp-for="CoverImage"
                   accept="image/*"
                   onchange="previewCover(event)" />
        </div>

        <button type="submit" class="submit-btn">
            完成開店
        </button>

    </form>
</div>

<script>
    function previewCover(event) {
        const reader = new FileReader();
        reader.onload = function () {
            const img = document.getElementById("previewImage");
            img.src = reader.result;
            img.style.display = "block";
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>