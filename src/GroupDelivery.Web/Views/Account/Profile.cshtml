@{ ViewData["Title"] = "個人資料"; }
<div id="app">
    <app-loading :show="loading"></app-loading>
    <app-toast :items="toasts" v-on:remove="removeToast"></app-toast>
    <div class="card" v-if="profile"><div class="card-body">
        <h4 class="mb-3">個人資料</h4>
        <div>姓名：{{ profile.displayName || '-' }}</div>
        <div>Email：{{ profile.email || '-' }}</div>
        <div>LINE 綁定：{{ profile.lineLinked ? '已綁定' : '未綁定' }}</div>
        <div class="mt-3">
            <a class="btn btn-outline-secondary me-2" href="/Auth/Logout">登出</a>
            <a class="btn btn-primary" href="/Onboarding/ChooseRole">切換角色</a>
        </div>
    </div></div>
</div>
@section Scripts {
<script src="/js/api/apiClient.js"></script>
<script src="/js/components/app-components.js"></script>
<script src="/js/pages/consumer-profile.js"></script>
}
