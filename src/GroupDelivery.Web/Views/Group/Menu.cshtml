@{
    ViewData["Title"] = "揪IN｜選餐加入";
    var groupId = ViewData["GroupId"]?.ToString() ?? "0";
}

<style>
    .menu-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .store-header {
        margin-bottom: 1.5rem;
    }

    .store-name {
        font-size: 1.6rem;
        font-weight: 800;
    }

    .store-address {
        color: #6b7280;
        font-size: .9rem;
    }

    .category-title {
        font-size: 1.2rem;
        font-weight: 800;
        margin-top: 1.5rem;
        margin-bottom: .8rem;
        border-left: 4px solid #16a34a;
        padding-left: .6rem;
    }

    .menu-item-card {
        border-radius: 1rem;
        border: 1px solid #e5e7eb;
        padding: 1rem 1.2rem;
        margin-bottom: .8rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .menu-item-name {
        font-weight: 700;
    }

    .menu-item-desc {
        font-size: .85rem;
        color: #6b7280;
    }

    .menu-item-price {
        font-weight: 700;
        color: #16a34a;
    }

    .qty-input {
        width: 70px;
        text-align: center;
    }

    .summary-box {
        margin-top: 1.5rem;
        padding: 1rem 1.2rem;
        border-radius: 1rem;
        background: #f9fafb;
    }

    .summary-label {
        color: #6b7280;
        font-size: .9rem;
    }

    .summary-amount {
        font-size: 1.3rem;
        font-weight: 800;
    }
</style>

<div id="app" class="container py-4">
    <div class="menu-container">

        <!-- 店家資訊 -->
        <div class="store-header" v-if="store">
            <div class="store-name">
                {{ store.storeName }}
            </div>
            <div class="store-address">
                {{ store.storeAddress || '未提供地址' }}
            </div>
        </div>

        <!-- 分類菜單 -->
        <div v-if="categories.length > 0">

            <div v-for="cat in categories" :key="cat.categoryId">

                <div class="category-title">
                    {{ cat.categoryName }}
                </div>

                <div class="menu-item-card"
                     v-for="item in cat.items"
                     :key="item.storeMenuItemId">

                    <div class="d-flex gap-3 align-items-center">

                        <!-- 🔥 圖片 -->
                        <img v-if="item.imageUrl"
                             :src="item.imageUrl"
                             style="width:90px;height:90px;object-fit:cover;border-radius:12px;" />

                        <div>
                            <div class="menu-item-name">{{ item.name }}</div>

                            <div class="menu-item-desc"
                                 v-if="item.description">
                                {{ item.description }}
                            </div>

                            <div class="menu-item-price">
                                ${{ item.price }}
                            </div>
                        </div>

                    </div>

                    <div class="d-flex align-items-center gap-2">
                        <button type="button"
                                class="btn btn-outline-secondary btn-sm"
                                @@click="decQty(item)">
                            -
                        </button>

                        <input type="number"
                               class="form-control qty-input"
                               v-model.number="item.qty"
                               min="0" />

                        <button type="button"
                                class="btn btn-outline-secondary btn-sm"
                                @@click="incQty(item)">
                            +
                        </button>
                    </div>

                </div>
            </div>

            <!-- 小計 -->
            <div class="summary-box">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="summary-label">預估金額</div>
                        <div class="summary-amount">
                            ${{ totalAmount }}
                        </div>
                    </div>

                    <button class="btn btn-success"
                            :disabled="totalAmount <= 0 || submitting"
                            @@click ="submitOrder">

                        <span v-if="!submitting">
                            確認選餐並送出
                        </span>

                        <span v-else>
                            <span class="spinner-border spinner-border-sm me-1"></span>
                            送出中...
                        </span>

                    </button>
                </div>

                <div class="summary-label mt-1">
                    實際金額以店家確認為準。
                </div>
            </div>

        </div>

        <div v-else class="text-muted">
            這個團目前沒有可選擇的菜單品項。
        </div>

    </div>
</div>

<script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
    const { createApp } = Vue;

    createApp({
        data() {
            return {
                groupId: '@groupId',
                store: null,
                categories: [],
                submitting: false
            };
        },

        computed: {
            totalAmount() {
                return this.categories.reduce(function (sum, cat) {
                    return sum + cat.items.reduce(function (s, x) {
                        var qty = x.qty || 0;
                        return s + (x.price * qty);
                    }, 0);
                }, 0);
            }
        },

        methods: {

            loadMenu() {
                var self = this;

                axios.get('/api/groups/' + this.groupId + '/menu')
                    .then(function (res) {

                        var data = res.data || {};

                        self.store = {
                            storeId: data.storeId,
                            storeName: data.storeName,
                            storeAddress: data.storeAddress
                        };

                        var rawCategories = data.categories || [];

                        if (rawCategories.length === 0 && data.items) {
                            rawCategories = [{
                                categoryId: 0,
                                categoryName: '其他',
                                items: data.items
                            }];
                        }

                        self.categories = rawCategories.map(function (c) {
                            return {
                                categoryId: c.categoryId,
                                categoryName: c.categoryName || '其他',
                                items: (c.items || []).map(function (x) {
                                    return {
                                        storeMenuItemId: x.storeMenuItemId,
                                        name: x.name,
                                        price: x.price,
                                        description: x.description,
                                        imageUrl: x.imageUrl,
                                        qty: 0
                                    };
                                })
                            };
                        });

                    });
            },

            incQty(item) {
                if (!item.qty) item.qty = 0;
                item.qty++;
            },

            decQty(item) {
                if (!item.qty) item.qty = 0;
                if (item.qty > 0) item.qty--;
            },

            submitOrder() {
                var self = this;

                if (this.submitting) return;

                var selected = [];

                this.categories.forEach(function (cat) {
                    cat.items.forEach(function (x) {
                        if (x.qty && x.qty > 0) {
                            selected.push({
                                storeMenuItemId: x.storeMenuItemId,
                                quantity: x.qty
                            });
                        }
                    });
                });

                if (selected.length === 0) {
                    alert('請至少選一項品項');
                    return;
                }

                this.submitting = true;

                axios.post('/api/orders', {
                    groupOrderId: parseInt(this.groupId),
                    items: selected
                })
                .then(function () {
                    window.location.href = '/Group/GroupDetail/' + self.groupId;
                })
                .catch(function (err) {

                    if (err.response && err.response.status === 401) {

                        var authModalEl = document.getElementById('authModal');
                        if (authModalEl) {
                            var modal = new bootstrap.Modal(authModalEl);
                            modal.show();
                        }
                        return;
                    }

                    if (err.response && err.response.data) {
                        alert(err.response.data);
                    } else {
                        alert('下單失敗，請稍後再試');
                    }
                })
                .finally(function () {
                    self.submitting = false;
                });
            }

        },

        mounted() {
            this.loadMenu();
        }

    }).mount('#app');
</script>