@{
    ViewData["Title"] = "揪IN｜選餐加入";
    var groupId = ViewData["GroupId"]?.ToString() ?? "0";
}

<style>
    .menu-container {
        max-width: 880px;
        margin: 0 auto;
    }

    .store-header {
        margin-bottom: 1.5rem;
    }

    .store-name {
        font-size: 1.6rem;
        font-weight: 800;
    }

    .store-address {
        color: #6b7280;
        font-size: .9rem;
    }

    .category-title {
        font-size: 1.2rem;
        font-weight: 800;
        margin-top: 1.5rem;
        margin-bottom: .6rem;
        border-left: 4px solid #16a34a;
        padding-left: .6rem;
    }

    .menu-item-card {
        border-radius: 1rem;
        border: 1px solid #e5e7eb;
        padding: 1rem 1.2rem;
        margin-bottom: .8rem;
        display: flex;
        justify-content: space-between;
        gap: 1rem;
    }

    .menu-item-left {
        display: flex;
        gap: .8rem;
        align-items: flex-start;
    }

    .menu-item-name {
        font-weight: 700;
    }

    .menu-item-desc {
        font-size: .85rem;
        color: #6b7280;
    }

    .menu-item-price {
        font-weight: 700;
        color: #16a34a;
        margin-top: .2rem;
    }

    .menu-item-extra {
        font-size: .8rem;
        color: #6b7280;
        margin-top: .15rem;
    }

    .qty-input {
        width: 70px;
        text-align: center;
    }

    .summary-box {
        margin-top: 1.5rem;
        padding: 1rem 1.2rem;
        border-radius: 1rem;
        background: #f9fafb;
    }

    .summary-label {
        color: #6b7280;
        font-size: .9rem;
    }

    .summary-amount {
        font-size: 1.3rem;
        font-weight: 800;
    }

    .badge-option {
        font-size: .75rem;
        background: #eff6ff;
        color: #1d4ed8;
        border-radius: 999px;
        padding: 2px 8px;
        margin-right: 4px;
        margin-top: 2px;
        display: inline-block;
    }

    .note-box {
        margin-top: 1rem;
    }

    .note-textarea {
        width: 100%;
        min-height: 70px;
        border-radius: .8rem;
        border: 1px solid #e5e7eb;
        padding: .6rem .8rem;
        font-size: .9rem;
        resize: vertical;
    }

    .note-hint {
        font-size: .8rem;
        color: #6b7280;
        margin-top: .2rem;
    }

    .take-mode-wrapper {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 12px;
    }

    .take-mode-card {
        border: 2px solid #e5e7eb;
        border-radius: 14px;
        padding: 16px;
        text-align: center;
        cursor: pointer;
        transition: all .2s ease;
        background: white;
    }

        .take-mode-card:hover {
            border-color: #16a34a;
            transform: translateY(-2px);
        }

    .take-mode-active {
        border-color: #16a34a;
        background: #f0fdf4;
        box-shadow: 0 4px 12px rgba(22,163,74,.15);
    }

    .take-mode-icon {
        font-size: 22px;
        margin-bottom: 6px;
    }

    .take-mode-title {
        font-weight: 700;
        font-size: 14px;
    }

    .take-mode-desc {
        font-size: 12px;
        color: #6b7280;
        margin-top: 4px;
    }
</style>

<div id="app" class="container py-4">
    <div class="menu-container">

        <!-- 店家資訊 -->
        <div class="store-header" v-if="store">
            <div class="store-name">
                {{ store.storeName }}
            </div>
            <div class="store-address">
                {{ store.storeAddress || '未提供地址' }}
            </div>
        </div>

        <!-- 分類菜單 -->
        <div v-if="categories.length > 0">

            <div v-for="cat in categories" :key="cat.categoryId">

                <div class="category-title">
                    {{ cat.categoryName }}
                </div>

                <div class="menu-item-card"
                     v-for="item in cat.items"
                     :key="item.storeMenuItemId">

                    <!-- 左側：圖片 + 文字 + 已選客製化 -->
                    <div class="menu-item-left">

                        <!-- 圖片 -->
                        <img v-if="item.imageUrl"
                             :src="item.imageUrl"
                             style="width:86px;height:86px;object-fit:cover;border-radius:12px;" />

                        <div>
                            <div class="menu-item-name">
                                {{ item.name }}
                            </div>

                            <div class="menu-item-desc"
                                 v-if="item.description">
                                {{ item.description }}
                            </div>

                            <div class="menu-item-price">
                                ${{ displayItemPrice(item) }}
                            </div>

                            <!-- 已選客製化摘要 -->
                            <div v-if="item.optionGroups && item.optionGroups.length > 0"
                                 class="menu-item-extra">

                                <span v-if="getSelectedOptions(item).length === 0">
                                    尚未選擇客製化
                                </span>

                                <div v-else>
                                    <span class="badge-option"
                                          v-for="opt in getSelectedOptions(item)"
                                          :key="opt.optionId">
                                        {{ opt.optionName }}
                                        <span v-if="opt.priceAdjust > 0">
                                            (+{{ opt.priceAdjust.toFixed(1) }})
                                        </span>
                                    </span>
                                </div>

                                <button type="button"
                                        class="btn btn-link p-0 mt-1"
                                        style="font-size:.8rem;"
                                        @@click="openOptions(item)">
                                    調整客製化
                                </button>
                            </div>

                        </div>

                    </div>

                    <!-- 右側：數量 -->
                    <div class="d-flex flex-column align-items-end gap-2">

                        <button v-if="item.optionGroups && item.optionGroups.length > 0"
                                type="button"
                                class="btn btn-outline-primary btn-sm"
                                @@click="openOptions(item)">
                            客製化
                        </button>

                        <div class="d-flex align-items-center gap-2">
                            <button type="button"
                                    class="btn btn-outline-secondary btn-sm"
                                    @@click="decQty(item)">
                                -
                            </button>

                            <input type="number"
                                   class="form-control qty-input"
                                   v-model.number="item.qty"
                                   min="0" />

                            <button type="button"
                                    class="btn btn-outline-secondary btn-sm"
                                    @@click="incQty(item)">
                                +
                            </button>
                        </div>
                    </div>

                </div>
            </div>
            <!-- 取餐方式 -->
            <div class="summary-box mb-3">
                <div class="fw-bold mb-3">取餐方式</div>

                <div class="take-mode-wrapper">

                    <div class="take-mode-card"
                         :class="takeMode === 0 ? 'take-mode-active' : ''"
                         @@click="takeMode = 0">
                        <div class="take-mode-icon">🥡</div>
                        <div class="take-mode-title">自取</div>
                        <div class="take-mode-desc">自行到店取餐</div>
                    </div>

                    <div class="take-mode-card"
                         :class="takeMode === 1 ? 'take-mode-active' : ''"
                         @@click="takeMode = 1">
                        <div class="take-mode-icon">🛵</div>
                        <div class="take-mode-title">外送</div>
                        <div class="take-mode-desc">店家配送到指定地點</div>
                    </div>

                    <div class="take-mode-card"
                         :class="takeMode === 2 ? 'take-mode-active' : ''"
                         @@click="takeMode = 2">
                        <div class="take-mode-icon">🍽</div>
                        <div class="take-mode-title">內用</div>
                        <div class="take-mode-desc">現場用餐</div>
                    </div>

                </div>

                <div v-if="takeMode === null" class="text-danger small mt-3">
                    請選擇取餐方式
                </div>
            </div>
            <!-- 給商家的備註 -->
            <div class="note-box mt-3">
                <label class="summary-label mb-1">
                    給商家的備註（選填）
                </label>
                <textarea class="note-textarea"
                          v-model="note"
                          placeholder="例如：小辣、飯少一點、不要香菜、如果沒有某品項可改成…"></textarea>
                <div class="note-hint">
                    備註內容會一併傳給商家，但是否能完全配合仍以店家實際狀況為主。
                </div>
            </div>

            <div class="summary-label mt-2">
                實際金額以店家確認為準。
            </div>
            <!-- 小計 + 備註 -->
            <div class="summary-box">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="summary-label">預估金額（含加價）</div>
                        <div class="summary-amount">
                            ${{ totalAmount }}
                        </div>
                    </div>

                    <button class="btn btn-success"
                            :disabled="totalAmount <= 0 || submitting"
                            @@click="submitOrder">

                        <span v-if="!submitting">
                            確認選餐並送出
                        </span>

                        <span v-else>
                            <span class="spinner-border spinner-border-sm me-1"></span>
                            送出中...
                        </span>

                    </button>
                </div>

                
            </div>

        </div>

        <div v-else class="text-muted">
            這個團目前沒有可選擇的菜單品項。
        </div>

    </div>

    <!-- 客製化選項 Modal -->
    <div class="modal fade" id="optionsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">
                        客製化設定 - {{ currentItem ? currentItem.name : '' }}
                    </h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>

                <div class="modal-body" v-if="currentItem">

                    <div v-if="!currentItem.optionGroups || currentItem.optionGroups.length === 0"
                         class="text-muted">
                        此品項沒有可調整的客製化設定。
                    </div>

                    <div v-else>

                        <div class="mb-3 small text-muted">
                            請勾選需要的客製化選項，加價金額會計入總價中。
                        </div>

                        <div v-for="(grp, gi) in currentItem.optionGroups"
                             :key="gi"
                             class="mb-3">

                            <div class="fw-bold mb-1">
                                {{ grp.groupName || '客製化' }}
                            </div>

                            <div class="list-group">

                                <label class="list-group-item d-flex align-items-center"
                                       v-for="(opt, oi) in grp.options"
                                       :key="opt.optionId">

                                    <input class="form-check-input me-2"
                                           type="checkbox"
                                           v-model="opt.selected" />

                                    <div class="d-flex flex-column">
                                        <span>{{ opt.optionName }}</span>
                                        <span class="text-muted small" v-if="opt.priceAdjust > 0">
                                            +{{ opt.priceAdjust.toFixed(1) }} 元
                                        </span>
                                        <span class="text-muted small" v-else>
                                            不加價
                                        </span>
                                    </div>
                                </label>

                            </div>

                        </div>

                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        取消
                    </button>
                    <button type="button"
                            class="btn btn-primary"
                            data-bs-dismiss="modal">
                        確認
                    </button>
                </div>

            </div>
        </div>
    </div>

</div>

<script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
    const { createApp } = Vue;

    createApp({

        data() {
            return {
                groupId: '@groupId',
                store: null,
                categories: [],
                submitting: false,
                note: '',
                currentItem: null,
                orderSource: 0,
                takeMode: null // 0=Pickup,1=Delivery,2=DineIn
            };
        },

        computed: {

            totalAmount() {
                return this.categories.reduce((sum, cat) => {
                    return sum + cat.items.reduce((s, x) => {

                        if (!x.qty || x.qty <= 0) {
                            return s;
                        }

                        var extra = 0;

                        if (x.optionGroups) {
                            x.optionGroups.forEach(function (g) {
                                g.options.forEach(function (o) {
                                    if (o.selected) {
                                        extra += o.priceAdjust || 0;
                                    }
                                });
                            });
                        }

                        return s + (x.price + extra) * x.qty;

                    }, 0);
                }, 0);
            }

        },

        methods: {

            loadMenu() {
                axios.get('/api/groups/' + this.groupId + '/menu')
                    .then(res => {

                        const data = res.data || {};

                        this.store = {
                            storeId: data.storeId,
                            storeName: data.storeName,
                            storeAddress: data.storeAddress
                        };

                        this.categories = (data.categories || []).map(c => ({
                            categoryId: c.categoryId,
                            categoryName: c.categoryName,
                            items: (c.items || []).map(x => ({
                                storeMenuItemId: x.storeMenuItemId,
                                name: x.name,
                                price: x.price,
                                description: x.description,
                                imageUrl: x.imageUrl,
                                qty: 0,
                                optionGroups: (x.optionGroups || []).map(g => ({
                                    groupName: g.groupName,
                                    options: (g.options || []).map(o => ({
                                        optionId: o.optionId,
                                        optionName: o.optionName,
                                        priceAdjust: o.priceAdjust || 0,
                                        selected: false
                                    }))
                                }))
                            }))
                        }));

                    });
            },

            incQty(item) {
                if (!item.qty) item.qty = 0;
                item.qty++;
            },

            decQty(item) {
                if (!item.qty) item.qty = 0;
                if (item.qty > 0) item.qty--;
            },
                openOptions(item) {

        this.currentItem = item;

        var modalEl = document.getElementById('optionsModal');
        if (!modalEl) {
            return;
        }

        // 需要 Bootstrap 5 JS
        var modal = bootstrap.Modal.getOrCreateInstance(modalEl);
        modal.show();
    },
            submitOrder() {

                if (this.submitting) return;

                if (this.takeMode === null) {
                    alert("請選擇取餐方式");
                    return;
                }

                const selected = [];

                this.categories.forEach(cat => {
                    cat.items.forEach(x => {

                        if (x.qty && x.qty > 0) {

                            const options = [];

                            if (x.optionGroups) {
                                x.optionGroups.forEach(g => {
                                    g.options.forEach(o => {
                                        if (o.selected) {
                                            options.push({
                                                optionId: o.optionId,
                                                optionName: o.optionName,
                                                priceAdjust: o.priceAdjust
                                            });
                                        }
                                    });
                                });
                            }

                            selected.push({
                                storeMenuItemId: x.storeMenuItemId,
                                quantity: x.qty,
                                options: options
                            });
                        }

                    });
                });

                if (selected.length === 0) {
                    alert("請至少選一項品項");
                    return;
                }

                this.submitting = true;

                axios.post('/api/orders', {
                    groupOrderId: parseInt(this.groupId),
                    items: selected,
                    note: this.note || '',
                    source: this.orderSource,
                    takeMode: this.takeMode
                })
                .then(() => {
                    window.location.href = '/Group/GroupDetail/' + this.groupId;
                })
                .catch(() => {
                    alert("下單失敗");
                })
                .finally(() => {
                    this.submitting = false;
                });

            },
                displayItemPrice(item) {

        var base = item.price || 0;
        var extra = 0;

        if (item.optionGroups) {
            item.optionGroups.forEach(function (g) {
                g.options.forEach(function (o) {
                    if (o.selected) {
                        extra += o.priceAdjust || 0;
                    }
                });
            });
        }

        return base + extra;
    },
        getSelectedOptions(item) {

        var result = [];

        if (!item.optionGroups) {
            return result;
        }

        item.optionGroups.forEach(function (g) {
            g.options.forEach(function (o) {
                if (o.selected) {
                    result.push(o);
                }
            });
        });

        return result;
    }

        },

        mounted() {

            const params = new URLSearchParams(window.location.search);
            const src = params.get("source");

            if (src === 'manual') {
                this.orderSource = 1;
            } else {
                this.orderSource = 0;
            }

            this.loadMenu();
        }

    }).mount('#app');
</script>