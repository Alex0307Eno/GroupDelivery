<script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
    const { createApp } = Vue;

    createApp({
        data() {
            return {
                groups: [],
                isAuthenticated: @User.Identity.IsAuthenticated.ToString().ToLower(),

            loading: true,
                userLat: null,
                userLng: null,
                radius: 3
            };
        },
        computed: {
            filteredGroups() {
                return this.groups.filter(g => g.distance <= this.radius);
            }
        },
        methods: {
            getLocation() {
                navigator.geolocation.getCurrentPosition(
                    pos => {
                        this.userLat = pos.coords.latitude;
                        this.userLng = pos.coords.longitude;
                        this.fetchGroups();
                    },
                    () => this.fetchGroups()
                );
            },
             handleJoin(group) {

        // æ²’ç™»å…¥ â†’ å½ˆå‡ºç™»å…¥ modal
        if (!this.isAuthenticated) {

            var authModalEl = document.getElementById('authModal');
            if (authModalEl && window.bootstrap) {
                var modal = new bootstrap.Modal(authModalEl);
                modal.show();
            } else {
                // è¬ä¸€ Bootstrap æ²’è¼‰åˆ°ï¼Œå°±é€€è€Œæ±‚å…¶æ¬¡å°å»ç™»å…¥é 
                window.location.href = '/Account/Login';
            }

            return;
        }

        // å·²ç™»å…¥ â†’ ç›´æ¥å°é 
        window.location.href = '/Group/GroupDetail/' + group.groupOrderId;
    },
            fetchGroups() {
                let url = "/api/groups";

                if (this.userLat && this.userLng) {
                    url += "?lat=" + this.userLat + "&lng=" + this.userLng;
                }

                axios.get(url).then(res => {
                    this.groups = res.data || [];
                    this.loading = false;
                });
            },
            getImageUrl(path) {
                if (!path)
                    return '/img/store-placeholder.jpg';

                if (path.startsWith('http'))
                    return path;

                return window.location.origin + path;
            },
            percent(g) {
                if (!g.targetAmount) return 0;
                let v = Math.round(g.currentAmount * 100 / g.targetAmount);
                if (v > 100) v = 100;
                return v;
            },
            leftAmount(g) {
                return Math.max(g.targetAmount - g.currentAmount, 0);
            },
            isHot(g) {
                return this.percent(g) >= 80;
            },
            remainingTime(deadline) {
                const diff = new Date(deadline) - new Date();
                if (diff <= 0) return "å·²æˆªæ­¢";

                const mins = Math.floor(diff / 60000);
                if (mins < 60) return mins + " åˆ†é˜å¾Œæˆªæ­¢";

                const hrs = Math.floor(mins / 60);
                return hrs + " å°æ™‚å¾Œæˆªæ­¢";
            }
        },
        mounted() {
            this.getLocation();
        }
    }).mount("#app");
</script>