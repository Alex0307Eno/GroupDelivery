                var list = this.groups.slice(0);

                if (this.filterMode === 'hot') {
                    list = list.filter(g => this.calculatePercent(g) >= 60);
                } else if (this.filterMode === 'new') {
                    list = list.sort(function (a, b) {
                        return new Date(b.createdTime) - new Date(a.createdTime);
                    });
                }

                if (!this.searchQuery) {
                    return list;
                }

                var k = this.searchQuery.toLowerCase();
                return list.filter(function (g) {
                    var name = g.store && g.store.storeName
                        ? g.store.storeName.toLowerCase()
                        : '';
                    var remark = g.remark ? g.remark.toLowerCase() : '';
                    return name.indexOf(k) >= 0 || remark.indexOf(k) >= 0;
                });
            },
            heroSubtitleShown() {
                return this.heroSubtitleFull.substring(0, this.heroSubtitleIndex);
            }
        },
        methods: {
            fetchGroups() {
                var self = this;
                axios.get('/api/groups')
                    .then(function (res) {
                        self.groups = res.data || [];
                        self.loading = false;
                    })
                    .catch(function () {
                        self.loading = false;
                    });
            },
            remainingMinutes(deadline) {
                if (!deadline) return 0;
                var d = new Date(deadline);
                var diff = d - this.now;
                var minutes = Math.floor(diff / 60000);
                if (minutes < 0) minutes = 0;
                return minutes;
            },
            calculatePercent(g) {
                var current = g.currentAmount || 0;
                var target = g.targetAmount || 0;
                if (target <= 0) return 0;
                var v = Math.round(current * 100 / target);
                if (v > 100) v = 100;
                if (v < 0) v = 0;
                return v;
            },
            leftAmount(g) {
                var current = g.currentAmount || 0;
                var target = g.targetAmount || 0;
                var left = target - current;
                if (left < 0) left = 0;
                return left;
            },
            isHot(g) {
                return this.calculatePercent(g) >= 70 && this.remainingMinutes(g.deadline) <= 30;
            },
            startHeroTyping() {
                var self = this;
                var timer = setInterval(function () {
                    if (self.heroSubtitleIndex >= self.heroSubtitleFull.length) {
                        clearInterval(timer);
                        self.heroTyping = false;
                        return;
                    }
                    self.heroSubtitleIndex++;
                }, 35);
            }
        },
        mounted() {
            var self = this;
            this.fetchGroups();
            this.startHeroTyping();

            setInterval(function () {
                self.now = new Date();
            }, 1000);

            // å¹³æ»‘æ²å‹•åˆ°æŒ‡å®šå€å¡Š
            document.querySelectorAll('[data-scroll-target]').forEach(function (el) {
                el.addEventListener('click', function (e) {
                    var target = el.getAttribute('data-scroll-target');
                    var dom = document.querySelector(target);
                    if (dom) {
                        e.preventDefault();
                        window.scrollTo({
                            top: dom.getBoundingClientRect().top + window.scrollY - 80,
                            behavior: 'smooth'
                        });
                    }
                });
            });
        }
    }).mount('#app');
</script>
